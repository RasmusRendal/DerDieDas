<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.DayNight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/app_primary_dark</item>
        <item name="colorPrimaryDark">@color/app_primary_light</item>
        <item name="colorAccent">@color/app_accent_light</item>
        <item name="colorSecondary">@color/app_secondary_light</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="buttonTextNormal">@android:color/black</item>
        <item name="buttonTextPressed">@android:color/white</item>
        <item name="buttonDrawable">@drawable/selectors_background</item>
        <item name="buttonAnimation">@drawable/button_animation_correct</item>
        <item name="dialogBackground">@color/dialogBackground_light</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/app_accent_light</item>
        <item name="colorSecondary">@color/app_secondary_light</item>
        <item name="android:windowBackground">?attr/dialogBackground</item>
    </style>

    <style name="Button.Layout" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Button.Game" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:textSize">48sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>